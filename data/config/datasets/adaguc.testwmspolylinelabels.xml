<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
  <!--
  See https://dev.knmi.nl/projects/adagucserver/wiki/Dataset, for details
  This file can be included by using the adaguc.dataset.cgi?service=wms&DATASET=testdata& key value pair in the URL
  -->

  <Style name="polyline_black_0.5px" title="border 0.5px black" abstract="border 0.5px black">
    <RenderMethod>polyline</RenderMethod>
    <Legend fixedclasses="true" tickinterval="0.1" tickround=".01">no2</Legend>
    <FeatureInterval match=".*" bgcolor="#CCCCFF"  bordercolor="#000000" borderwidth="0.5"/>
  </Style>

  <Style name="polyline_with_label" title="border 0.5px blue" abstract="border 0.5px blue">
    <RenderMethod>polyline</RenderMethod>
    <Legend fixedclasses="true" tickinterval="0.1" tickround=".01">no2</Legend>
    <FeatureInterval match=".*" bgcolor="#CCCCFF" bordercolor="#0000FFFF" label="area" borderwidth="0.5" labelpropertyname="name" labelfontsize="12" labelangle="0" labelfontfile="{ADAGUC_PATH}/data/fonts/FreeSans.ttf" labelcolor="#000080FF"/>
  </Style>

  <Style name="polyline_with_label_overlap" title="border 0.5px blue" abstract="border 0.5px blue">
    <RenderMethod>polyline</RenderMethod>
    <Legend fixedclasses="true" tickinterval="0.1" tickround=".01">no2</Legend>
    <FeatureInterval match=".*" bgcolor="#CCCCFF" bordercolor="#0000FFFF" label="area" borderwidth="0.5" labelpropertyname="name" labelfontsize="12" labelangle="0" labelfontfile="{ADAGUC_PATH}/data/fonts/FreeSans.ttf" labelcolor="#000080FF"/>
    <RenderSettings featuresoverlap="true"/>
  </Style>

  <Style name="polyline_with_label_angle" title="border 0.5px blue" abstract="border 0.5px blue">
    <RenderMethod>polyline</RenderMethod>
    <Legend fixedclasses="true" tickinterval="0.1" tickround=".01">no2</Legend>
    <FeatureInterval match=".*" bgcolor="#CCCCFF" bordercolor="#0000FFFF" label="area" borderwidth="0.5" labelpropertyname="name" labelfontsize="12" labelangle="45" labelfontfile="{ADAGUC_PATH}/data/fonts/FreeSans.ttf" labelcolor="#000080FF"/>
    <RenderSettings featuresoverlap="true"/>
  </Style>

 <Style name="polyline_with_label_color"  title="border 0.5px blue" abstract="border 0.5px blue">
    <RenderMethod>polyline</RenderMethod>
    <Legend fixedclasses="true" tickinterval="0.1" tickround=".01">no2</Legend>
    <FeatureInterval match=".*" bgcolor="#CCCCFF" bordercolor="#FF0000FF" label="area" borderwidth="0.5" labelpropertyname="name" labelfontsize="18" labelangle="0" labelfontfile="{ADAGUC_PATH}/data/fonts/Roboto-MediumItalic.ttf" labelcolor="#00A000FF"/>
    <RenderSettings featuresoverlap="true"/>
 </Style>

 <Style name="polyline_with_label_roboto" title="border 0.5px blue" abstract="border 0.5px blue">
    <RenderMethod>polyline</RenderMethod>
    <Legend fixedclasses="true" tickinterval="0.1" tickround=".01">no2</Legend>
    <FeatureInterval match=".*" bgcolor="#CCCCFF" bordercolor="#0000FFFF" label="area" borderwidth="0.5" labelpropertyname="name" labelfontsize="12" labelangle="0" labelfontfile="{ADAGUC_PATH}/data/fonts/Roboto-MediumItalic.ttf" labelcolor="#808000FF"/>
    <RenderSettings featuresoverlap="true"/>
 </Style>

  <Layer type="database">
    <Name>areas</Name>
    <Title>Areas</Title>
    <FilePath filter="areas.geojson">{ADAGUC_PATH}data/datasets/polylinelabels</FilePath>
    <DataSource>GEOJSON</DataSource>
    <Variable>features</Variable>
    <Styles>polyline_black_0.5px,polyline_with_label,polyline_with_label_overlap,polyline_with_label_angle,polyline_with_label_roboto,polyline_with_label_color</Styles>
  </Layer>

</Configuration>

