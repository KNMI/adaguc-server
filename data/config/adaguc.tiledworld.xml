   <Layer type="database">
     <Name>osm</Name>
     <Title>osm</Title>
     <!--<FilePath>/data/services/data/HYP_50M_SR_W.png</FilePath>-->
     <FilePath filter="^.*\.png$">/data/services/data/osmtiles/</FilePath>
     
     <Variable>pngdata</Variable>
     <Dimension name="none"/>
     <RenderMethod >rgba</RenderMethod>
     <TileSettings tilewidthpx="256" 
                   tileheightpx="256" 
                   tilecellsizex="152.746"
                   tilecellsizey="152.746"
                   left="-20037508.342789244" right="20037508.342789244"
                   bottom="-20037508.342789244" top="20037508.342789244"
                  
                   tileprojection="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +wktext  +no_defs"
                   minlevel="1"
                   maxlevel="10" tilemode="rgba"
                   debug="false"
                   threads="1" 
                   tsdilepath="/data/services/data/HYP_50M_SR_Wtiles"
                   optimizeextent="false"/>
     </Layer>

